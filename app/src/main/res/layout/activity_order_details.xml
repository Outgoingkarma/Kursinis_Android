<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activitiesWolt.OrderDetailsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/openChatButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Order ID Title -->
            <TextView
                android:id="@+id/orderDetailsId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: #"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/orderDetailsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Total -->
            <TextView
                android:id="@+id/orderDetailsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: â‚¬"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Restaurant -->

            <!-- Customer -->
            <TextView
                android:id="@+id/orderDetailsCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Customer:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/orderDetailsRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Restaurant:"
                android:textSize="16sp" />

            <!-- Date -->

            <!-- Order Items Section -->
            <TextView
                android:id="@+id/orderItemsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Items:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ListView
                android:id="@+id/orderItemsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Empty space area -->
            <View
                android:id="@+id/emptySpace"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/white"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Open Chat Button -->
    <Button
        android:id="@+id/openChatButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Open Chat"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:onClick="openChat"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


